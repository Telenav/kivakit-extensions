<project xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xmlns = "http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.telenav.kivakit</groupId>
        <artifactId>kivakit-merged</artifactId>
        <version>1.4.3-SNAPSHOT</version>
    </parent>

    <artifactId>kivakit-merged-grpc</artifactId>

    <packaging>jar</packaging>

    <!--

        This project is here solely to build the grpc project into a single JAR to resolve the split package
        problem between grpc-api and grpc-context. The JAR should be built and then manually installed in the
        kivakit-merged project in the lib folder.

     -->

    <properties>

        <grpc.version>1.45.0</grpc.version>

    </properties>

    <dependencies>

        <dependency>
			<groupId>io.grpc</groupId>
			<artifactId>grpc-protobuf</artifactId>
			<version>${grpc.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.google.errorprone</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
		</dependency>
        <dependency>
			<groupId>io.grpc</groupId>
			<artifactId>grpc-protobuf-lite</artifactId>
			<version>${grpc.version}</version>
		</dependency>
        <dependency>
			<groupId>io.grpc</groupId>
			<artifactId>grpc-api</artifactId>
			<version>${grpc.version}</version>
		</dependency>
        <dependency>
			<groupId>io.grpc</groupId>
			<artifactId>grpc-core</artifactId>
			<version>${grpc.version}</version>
		</dependency>
        <dependency>
			<groupId>io.grpc</groupId>
			<artifactId>grpc-context</artifactId>
			<version>${grpc.version}</version>
		</dependency>
		<dependency>
			<groupId>io.grpc</groupId>
			<artifactId>grpc-netty</artifactId>
			<version>${grpc.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>io.netty</groupId>
                    <artifactId>netty-resolver</artifactId>
                </exclusion>
            </exclusions>
		</dependency>
		<dependency>
			<groupId>io.grpc</groupId>
			<artifactId>grpc-stub</artifactId>
			<version>${grpc.version}</version>
		</dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <finalName>kivakit-merged-grpc-${kivakit.version}</finalName>
                            <minimizeJar>false</minimizeJar>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                            <artifactSet>
                                <includes>
                                    <include>*:*</include>
                                </includes>
                            </artifactSet>
                            <transformers>
                                <transformer implementation = "org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                 <manifestEntries>
                                     <Automatic-Module-Name>kivakit.merged.grpc</Automatic-Module-Name>
                                 </manifestEntries>
                                </transformer>
                            </transformers>
                            <relocations>
{                               <relocation>
}                                  <pattern>com.google</pattern>
                                  <shadedPattern>kivakit.merged.grpc.com.google</shadedPattern>
                                </relocation>
                                 <relocation>
}                                  <pattern>javax.annotation</pattern>
                                  <shadedPattern>kivakit.merged.grpc.javax.annotation</shadedPattern>
                                </relocation>
                                <relocation>
                                  <pattern>io.perfmark</pattern>
                                  <shadedPattern>kivakit.merged.grpc.io.perfmark</shadedPattern>
                                </relocation>
                                <relocation>
                                  <pattern>io.grpc</pattern>
                                  <shadedPattern>kivakit.merged.grpc.io.grpc</shadedPattern>
                                </relocation>
                                <relocation>
                                  <pattern>io.netty</pattern>
                                  <shadedPattern>kivakit.merged.grpc.io.netty</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.errorprone</pattern>
                                    <shadedPattern>kivakit.merged.grpc.com.google.errorprone</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

</project>
