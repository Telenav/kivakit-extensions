<project xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xmlns = "http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation = "http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.telenav.kivakit</groupId>
        <artifactId>kivakit-merged</artifactId>
        <version>1.4.1</version>
    </parent>

    <artifactId>kivakit-merged-protostuff</artifactId>

    <packaging>jar</packaging>

    <!--

        This project is here solely to build the protostuff project into a single JAR to resolve the split package
        problem between protostuff-core and protostuff-runtime. The JAR is built and then manually installed in the
        kivakit-merged project in the lib folder.

     -->

    <properties>

        <protostuff.version>1.1.6</protostuff.version>

    </properties>

    <dependencies>

        <dependency>
            <groupId>com.dyuproject.protostuff</groupId>
            <artifactId>protostuff-core</artifactId>
            <version>${protostuff.version}</version>
        </dependency>
        <dependency>
            <groupId>com.dyuproject.protostuff</groupId>
            <artifactId>protostuff-runtime</artifactId>
            <version>${protostuff.version}</version>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <finalName>kivakit-merged-protostuff-${kivakit.version}</finalName>
                            <minimizeJar>false</minimizeJar>
                            <artifactSet>
                                <includes>
                                    <include>*:*</include>
                                </includes>
                            </artifactSet>
                            <transformers>
                                <transformer implementation = "org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                 <manifestEntries>
                                     <Automatic-Module-Name>kivakit.merged.protostuff</Automatic-Module-Name>
                                 </manifestEntries>
                                </transformer>
                            </transformers>
                            <relocations>
                                <relocation>
                                  <pattern>io.netty</pattern>
                                  <shadedPattern>kivakit.merged.protostuff.io.netty</shadedPattern>
                                </relocation>
                                <relocation>
                                  <pattern>io.netty</pattern>
                                  <shadedPattern>kivakit.merged.protostuff.io.netty</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

</project>
